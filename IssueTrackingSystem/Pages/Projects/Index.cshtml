@page
@model IssueTrackingSystem.Pages.Projects.IndexModel

@{
    ViewData["Title"] = "Projects";
}

<div class="pagetitle">
    <h1>Projects</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Dashboard/Index">Dashboard</a></li>
            <li class="breadcrumb-item active">Projects</li>    
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="card">
   
  <div class="card-body">
     @*div with classes to show card-title and create new link on same line with the link being on right side of card*@
     <div class="align-middle">       
        <h2 class="card-title d-inline-block">All Projects</h2>
            <a class="btn btn-outline-primary float-end " asp-page="Create"><i class="bi bi-plus-lg" style="font-weight: bold;"></i> Create New</a>
     </div> 
<div class="table-responsive">
<table id="projectsTable" class="table table-hover">
    <thead>
        <tr>
            <th>Actions</th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].ProjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].TargetEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Project[0].EndDate)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Project) {
        <tr>
            <td>
               @*create a dropdown list button with edit and delete links and routes*@
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                 Actions
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li><a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.ProjectId">Edit</a></li>
                                <li><a class="dropdown-item" asp-page="./Details" asp-route-id="@item.ProjectId">Details</a></li>
                                <li><a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.ProjectId">Delete</a></li>
                            </ul>
                        </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
          
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
@section Scripts
{
    
    <script src="~/js/projectsDatatable.js"></script>
}