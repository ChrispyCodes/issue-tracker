@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    
    <li class="nav-item dropdown pe-4">

          <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
            <img src="/img/profile-img.jpg" alt="Profile" class="rounded-circle">
            <span class="d-none d-md-block dropdown-toggle ps-2">@User.Identity?.Name</span>
          </a><!-- End Profile Iamge Icon -->

          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
            <li class="dropdown-header">
              <h6>@User.Identity?.Name</h6>
                @if (User.IsInRole("SuperAdmin"))
                {
                    <span>Super Admin</span>
                }
                else if (User.IsInRole("Admin"))
                {
                    <span>Admin</span>
                }
                else
                {
                    <span>Developer</span>
                }
              
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
            <li>
              <hr class="dropdown-divider">
            </li>
                <li>
                <a class="dropdown-item d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-gear"></i>
                        <span>Settings</span>
                    </a>
            <li>
              <hr class="dropdown-divider">
            </li>
           
            <li>
              <hr class="dropdown-divider">
            </li>

            <li class="dropdown-item d-flex align-items-center">
                 <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post" >
                <button type="submit" class="btn btn-outline-danger">Logout</button>
                </form>
              
            </li>

          </ul><!-- End Profile Dropdown Items -->
        </li><!-- End Profile Nav -->
    
    
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item pl-3">
        <a class="nav-link text-light btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Log in</a>
    </li>
}

